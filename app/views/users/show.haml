.main-container.elevated#user
  .summary
    %h2.text-lead= @user.name
    %p
      %sub
        - if @user.last_sign_in_at
          = "Último login #{time_ago_in_words @user.last_sign_in_at} atrás"
        - else
          = "Usuário ainda não realizou nenhum login"
    %p
      %sub
        :plain
          Criado em #{html_escape time_tag @user.created_at}
  .details
    %p= @user.email
    %p.admin= t("attributes.admin.#{@user.admin?}")
  .actions
    = link_to users_path do
      = icon 'fas', 'arrow-left'
    = link_to t("verbs.edit"), edit_user_path(@user), class: 'button primary'

