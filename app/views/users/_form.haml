= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .actions
    = link_to users_path do
      = icon 'fas', 'arrow-left'
    - if action_name == 'edit'
      = link_to t('verbs.show'), @user, class: 'button secondary'
    = f.submit t('verbs.save'), class: 'primary'
