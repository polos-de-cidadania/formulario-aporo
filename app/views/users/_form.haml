= simple_form_for @user do |f|
  = f.input :name, autocomplete: "full-name"
  = f.input :email, autocomplete: "new-password"
  - if current_user.admin?
    = f.input :admin
  = f.input :password, autocomplete: "new-password"
  = f.input :password_confirmation, autocomplete: "new-password"
  .actions
    = link_to users_path do
      = icon 'fas', 'arrow-left'
    - if action_name == 'edit'
      = link_to t('verbs.show'), @user, class: 'button secondary'
    = f.submit t('verbs.save'), class: 'primary'
